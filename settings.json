{
  // themes
  "workbench.colorTheme": "One Dark Pro Flat",
  "workbench.colorCustomizations": {
    "[One Dark Pro]": {
      "terminal.background": "#281c34",
      "terminal.foreground": "#D5C4A1",
      "terminalCursor.background": "#D5C4A1",
      "terminalCursor.foreground": "#D5C4A1",
      "terminal.ansiBlack": "#282c34",
      "terminal.ansiBlue": "#83A598",
      "terminal.ansiBrightBlack": "#665C54",
      "terminal.ansiBrightBlue": "#83A598",
      "terminal.ansiBrightCyan": "#8EC07C",
      "terminal.ansiBrightGreen": "#B8BB26",
      "terminal.ansiBrightMagenta": "#D3869B",
      "terminal.ansiBrightRed": "#FB4934",
      "terminal.ansiBrightWhite": "#FBF1C7",
      "terminal.ansiBrightYellow": "#FABD2F",
      "terminal.ansiCyan": "#8EC07C",
      "terminal.ansiGreen": "#B8BB26",
      "terminal.ansiMagenta": "#D3869B",
      "terminal.ansiRed": "#FB4934",
      "terminal.ansiWhite": "#D5C4A1",
      "terminal.ansiYellow": "#FABD2F"
    }
  },
  "workbench.iconTheme": "material-icon-theme",
  "terminal.integrated.fontFamily": "DroidSansMono Nerd Font",

  // ---------------- vs applications settings ----------------------
  // font style
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 26,
  "editor.fontLigatures": true,
  "editor.hover.enabled": false,
  "editor.lineNumbers": "on",
  "workbench.sideBar.location": "right",
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.enabled": false,
  // snippets
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.snippetSuggestions": "bottom",
  // remove auto complete with dot
  "editor.acceptSuggestionOnCommitCharacter": false,
  // format
  "editor.defaultFormatter": null,
  "editor.formatOnSave": true,

  // terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "terminal.integrated.gpuAcceleration": "off",

  // ------------------- language settings------------
  // frontend
  "[typescript, javascript, json, scss, css, html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // markdown
  "markdown.preview.fontFamily": "'Times New Roman', '楷体', sans-serif",
  "markdown-preview-enhanced.codeBlockTheme": "atom-dark.css",
  "markdown-preview-enhanced.previewTheme": "atom-dark.css",
  "markdown.preview.fontSize": 18,
  "markdownFormatter.fullWidthTurnHalfWidth": "auto",
  "markdownFormatter.formatOpt": {
    "indent_size": 2
  },
  "[markdown]": {
    // auto save
    "editor.formatOnSave": false,
    // show space
    "editor.renderWhitespace": "all",
    //
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.defaultFormatter": "mervin.markdown-formatter"
  },
  "workbench.editorAssociations": {
    "*.md": "default"
  },

  "[matlab]": {
    "files.encoding": "gb2312"
  },

  // plugins
  // live server
  "liveServer.settings.donotShowInfoMsg": true,

  // leetcode
  "leetcode.endpoint": "leetcode-cn",
  "leetcode.workspaceFolder": "e:\\005-文档\\Onedrive\\桌面\\T7-merge\\JavaScript\\LeetCode",
  "[mardown]": {
    "editor.defaultFormatter": null
  },
  "leetcode.defaultLanguage": "javascript",

  // prettier
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --------------------- vim key settings ---------------------------------------------
  // vim base settings
  "vim.useCtrlKeys": true,
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true, // hight <y> copy token
  "vim.hlsearch": false, // higlight search matched tokens
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-b>": false,
    "<C-c>": false,
    "<C-k>": false,
    "<C-n>": false,
    "<C-e>": false
  },
  "vim.leader": "<space>",

  // vim plugins
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.sneak": true,

  // vim key bindings
  // vim normal mode key bindings
  "vim.normalModeKeyBindingsNonRecursive": [
    // remap default vim key bindings
    {
      "before": ["J"],
      "after": ["g", "T"]
    },
    {
      "before": ["K"],
      "after": ["g", "t"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    },
    {
      "before": ["-"],
      "after": ["%"]
    },
    // vscode command trigger
    {
      "before": ["leader", "o"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": [":", ":"],
      "commands": ["workbench.action.showCommands"]
    },
    // buffer key bindings
    {
      "before": ["leader", "b", "d"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "b", "h"],
      "commands": ["workbench.action.moveEditorToLeftGroup"]
    },
    {
      "before": ["leader", "b", "j"],
      "commands": ["workbench.action.moveEditorToBelowGroup"]
    },
    {
      "before": ["leader", "b", "k"],
      "commands": ["workbench.action.moveEditorToAboveGroup"]
    },
    {
      "before": ["leader", "b", "l"],
      "commands": ["workbench.action.moveEditorToRightGroup"]
    },
    {
      "before": ["leader", "b", "m"],
      "commands": ["workbench.action.cloaseOtherEditors"]
    },
    {
      "before": ["leader", "1"],
      "commands": ["workbench.action.focusFirstEditorGroup"]
    },
    {
      "before": ["leader", "2"],
      "commands": ["workbench.action.focusSecondEditorGroup"]
    },
    // debug
    {
      "before": ["leader", "d", "e"],
      "commands": ["workbench.action.debug.start"]
    },
    {
      "before": ["leader", "d", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    },
    {
      "before": ["leader", "d", "e"],
      "commands": ["workbench.action.debug.stop"]
    },
    {
      "before": ["leader", "d", "c"],
      "commands": ["workbench.action.debug.continue"]
    },
    {
      "before": ["leader", "d", "p"],
      "commands": ["workbench.action.debug.pause"]
    },
    {
      "before": ["leader", "d", "r"],
      "commands": ["workbench.action.debug.restart"]
    },
    {
      "before": ["leader", "d", "i"],
      "commands": ["workbench.action.debug.stepInto"]
    },
    {
      "before": ["leader", "d", "o"],
      "commands": ["workbench.action.debug.stepOut"]
    },
    // file explorer
    {
      "before": ["leader", "e"],
      "commands": ["workbench.view.explorer"]
    },
    // new files: advance new files
    {
      "before": ["leader", "n"],
      "commands": ["extension.advancedNewFile"]
    },
    // live-server
    {
      "before": ["leader", "l"],
      "commands": [
        {
          "command": "extension.liveServer.goOnline",
          "when": "editorTextFocus"
        }
      ]
    },
    // fold and unfold code pieces
    {
      "before": ["<leader>", "f", "f"],
      "commands": [
        {
          "command": "editor.fold",
          "when": "editorTextFocus && foldingEnabled"
        }
      ]
    },
    {
      "before": ["<leader>", "f", "e"],
      "commands": [
        {
          "command": "editor.unfold",
          "when": "editorTextFocus && foldingEnabled"
        }
      ]
    },
    // git
    {
      "before": ["leader", "g", "/"],
      "commands": ["gitlens.showCommitSearch"]
    },
    {
      "before": ["leader", "g", "i"],
      "commands": ["git.init"]
    },
    {
      "before": ["leader", "g", "a"],
      "commands": ["git.stage"]
    },
    {
      "before": ["leader", "g", "b"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["leader", "g", "c"],
      "commands": ["git.commit"]
    },
    {
      "before": ["leader", "g", "p"],
      "commands": ["git.push"]
    },
    {
      "before": ["leader", "g", "p", "r"],
      "commands": ["git.pull"]
    },
    // bookmarks
    {
      "before": ["leader", "m", "t"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["leader", "m", "j"],
      "commands": ["bookmarks.jumpToNext"]
    },
    {
      "before": ["leader", "m", "k"],
      "commands": ["bookmarks.jumpToPrevious"]
    },
    {
      "before": ["leader", "m", "l"],
      "commands": ["bookmarks.listFromAllFiles"]
    },
    {
      "before": ["leader", "m", "r"],
      "commands": ["bookmarks.refresh"]
    },
    {
      "before": ["leader", "m", "s"],
      "commands": ["workbench.view.extension.bookmarks"]
    },
    // terminal
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.terminal.focus"]
    },
    {
      "before": ["leader", "t", "c"],
      "commands": ["workbench.action.closePanel"]
    },
    // ui
    {
      "before": ["leader", "u", "a"],
      "commands": ["workbench.action.toggleActivityBarVisibility"]
    },
    {
      "before": ["leader", "u", "b"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["leader", "u", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["leader", "u", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["leader", "u", "p"],
      "commands": ["workbench.view.extensions"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [":", ":"],
      "commands": ["workbench.action.showCommands"]
    }
  ]
}
